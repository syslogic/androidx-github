<?xml version="1.0" encoding="UTF-8"?>
<lint>

    <issue id="PluralsCandidate" severity="ignore" />
    <issue id="ConvertToWebp" severity="ignore" />

    <issue id="MissingRegistered">
        <ignore regexp="androidx.*.widget.*" />
        <ignore regexp="com.google.android.material.appbar.AppBarLayout" />
        <ignore regexp="com.airbnb.lottie.LottieAnimationView" />
    </issue>

    <issue id="UnusedIds">
        <ignore regexp="R.id.nav_graph"/>
    </issue>

    <issue id="SyntheticAccessor">
        <ignore regexp="LOG_TAG" />
    </issue>

    <issue id="UnusedResources">
        <ignore regexp="R.layout.*" />
        <ignore regexp="R.string.tools_*" />
        <ignore regexp="R.string.text_pager_*" />
        <ignore regexp="R.string.text_stargazers" />
        <ignore regexp="R.string.text_subscribers" />
        <ignore regexp="R.string.text_networks" />
        <ignore regexp="R.drawable.baseline_cloud_download_*" />
    </issue>

    <!-- JaCoCo, from Gradle cache ... -->
    <issue id="InvalidPackage">
        <ignore regexp="java.lang.instrument" />
        <ignore regexp="java.lang.management" />
        <ignore regexp="javax.management" />
    </issue>

    <!-- don't notice about available alpha/beta versions -->
    <issue id="GradleDependency">
        <ignore regexp="is available: .*[alpha|beta]" />
    </issue>

</lint>
