<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage"
        android:maxSdkVersion="32"/>

    <!-- Permissions: Lollipop MR1 -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" android:maxSdkVersion="22"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS" android:maxSdkVersion="22"/>

    <application
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:theme="@style/Theme.AppTheme.SplashScreen"
        android:roundIcon="@drawable/ic_launcher_round"
        android:icon="@drawable/ic_launcher"
        android:hardwareAccelerated="true"
        android:allowBackup="false"
        android:supportsRtl="true"
        tools:ignore="DataExtractionRules"
        tools:targetApi="s">

        <activity
            android:name=".activity.NavHostActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.AuthenticatorActivity"
            android:theme="@style/Theme.AppTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>

        <service
            android:name=".network.TokenService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/account_authenticator"/>
        </service>

        <provider
            android:label="@string/text_bookmarks"
            android:name=".content.QueryStringProvider"
            android:authorities="io.syslogic.github.content.QueryStringProvider"
            android:exported="false"
            android:syncable="false"/>

        <provider
            android:label="@string/text_repositories"
            android:name=".content.RepositoryProvider"
            android:authorities="io.syslogic.github.content.RepositoryProvider"
            android:grantUriPermissions="true"
            android:exported="true"
            android:syncable="true"
            tools:ignore="ExportedContentProvider" />

        <service
            android:name=".content.RepositorySyncService"
            android:exported="true"
            android:process=":sync"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter"/>
        </service>

    </application>

</manifest>
