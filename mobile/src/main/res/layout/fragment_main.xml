<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DetailActivity">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".databinding.RepositoriesFragmentBinding">
        <variable name="repository" type="io.syslogic.github.model.Repositories"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_repositories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_query"
            layout="@layout/toolbar_query"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_margin="0dp"/>

        <io.syslogic.github.recyclerview.RepositoriesLinearView
            android:id="@+id/recyclerview_repositories"
            tools:listitem="@layout/cardview_repository"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>