<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.NavHostActivity">

    <data>
        <variable name="topic" type="io.syslogic.github.model.Topic"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_topic"
            android:id="@+id/toolbar_topic"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_margin="0dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:padding="0dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:color="?android:colorControlHighlight"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|center"
            android:padding="8dp"
            android:text='@{"" + topic.id}'
            android:textColor="@color/colorText"
            android:textSize="14sp"
            tools:text="23"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:color="?android:colorControlHighlight"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:text="@{topic.title}"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            tools:text="Android"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/queryString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:color="?android:colorControlHighlight"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:text="@{topic.queryString}"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            tools:text="topic:android"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:color="?android:colorControlHighlight"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:text="@{topic.condition}"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            tools:text="pushed"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:color="?android:colorControlHighlight"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:text="@{topic.operator}"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            tools:text=">"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:color="?android:colorControlHighlight"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:text='@{"" + topic.days}'
            android:textColor="@color/colorText"
            android:textSize="14sp"
            tools:text="-90"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
