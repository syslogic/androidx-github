<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".databinding.ToolbarPagerBinding">
        <variable name="pager" type="io.syslogic.github.model.PagerState"/>
        <import type="io.syslogic.github.BuildConfig"/>
        <import type="android.view.View"/>
    </data>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_pager"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:contentInsetStart="0dp"
        android:elevation="4dp"
        android:gravity="top"
        android:padding="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_toolbar_query"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:padding="0dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_toolbar_pager"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_query_string"
                    tools:text="@string/tools_query_string"
                    android:visibility="@{BuildConfig.DEBUG ? View.VISIBLE : View.GONE}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:layout_weight="1.0"
                    android:paddingStart="12dp"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_page_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="12dp"
                    android:textSize="12sp"
                    android:text='@{safeUnbox(pager.isOffline) ? @string/text_pager_offline : String.format((safeUnbox(pager.isLoading) ? @string/text_pager_loading : @string/text_pager_loaded), pager.pageNumber, pager.pageCount)}'
                    tools:text="@string/tools_page_number"
                    tools:ignore="RtlSymmetry"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.Toolbar>

</layout>
