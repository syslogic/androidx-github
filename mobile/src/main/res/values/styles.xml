<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme is the default theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <!-- The Default AppTheme -->
    <style name="Theme.AppTheme" parent="BaseTheme">

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>

    </style>

    <style name="Theme.AppTheme.SplashScreen" parent="Theme.SplashScreen">

        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/cardview_dark_background</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable.
        <item name="windowSplashScreenAnimationDuration">200</item>  # Required for animated icons
        <!-- <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_round</item> -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ocotocat_round</item>

        // The theme of the Activity that directly follows the splash screen.
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item> # Required.
    </style>

</resources>
